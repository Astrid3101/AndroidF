<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Jugabilidad3_Activity"
    android:orientation="vertical"
    android:layout_marginTop="100dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblpregunta"
        android:hint="Jugabilidad Completar palabra"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtRespuesta"
        android:hint="Respuesta"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btnRes1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:hint="1"
            android:onClick="btn1"
            android:textSize="15dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="2"
            android:textSize="15dp"
            android:id="@+id/btnRes2"
            android:layout_marginLeft="5dp"
            android:onClick="btn2"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="3"
            android:textSize="15dp"
            android:id="@+id/btnRes3"
            android:layout_marginLeft="5dp"
            android:onClick="btn3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="4"
            android:textSize="15dp"
            android:id="@+id/btnRes4"
            android:layout_marginLeft="5dp"
            android:onClick="btn4"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="5"
            android:textSize="15dp"
            android:id="@+id/btnRes5"
            android:layout_marginLeft="5dp"
            android:onClick="btn5"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="6"
            android:textSize="15dp"
            android:id="@+id/btnRes6"
            android:layout_marginLeft="5dp"
            android:onClick="btn6" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comprobar"
        android:layout_gravity="center"
        android:onClick="Comprobar"/>


</LinearLayout>